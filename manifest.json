{
    "name": "bru2nii",
    "label": "Bruker to NIfTI converter",
    "description": "Bru2Nii is an open source medical image format converter from raw Bruker ParaVision to NIfTI, without any intermediate step through the DICOM standard formats.",
    "version": "0.1.0",
    "flywheel": "0",
    "inputs": {
        "bruker": {
            "base": "file",
            "description": "A zipped bruker file.",
            "type": {
                "enum": [
                    "ParaVision"
                ]
            }
        }
    },
    "config": {
        "Actual Size": {
            "type": "boolean",
            "description": "Actual size (otherwise x10 scale so animals match human)",
            "default": false
        },
        "Verbose": {
            "type": "boolean",
            "description": "Show verbose messages during conversion",
            "default": false
        }
    },
    "author": "Flywheel",
    "maintainer": "support@flywheel.io",
    "license": "Other",
    "source": "",
    "url": "",
    "custom": {
        "docker-image": "flywheel/bru2nii:0.1.0",
        "gear-builder": {
            "image": "flywheel/bru2nii:0.1.0"
        }
    }
}
